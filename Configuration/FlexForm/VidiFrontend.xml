<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<general>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.general</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.dataType>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.content_type</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getDataTypes</itemsProcFunc>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.dataType>
					<settings.columns>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.columns</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getColumns</itemsProcFunc>
								<size>10</size>
								<maxitems>100</maxitems>
							</config>
						</TCEforms>
					</settings.columns>
					<settings.defaultNumberOfItems>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.number_of_items</label>
							<config>
								<type>input</type>
								<default>10, 20, 50, 100, -1</default>
							</config>
						</TCEforms>
					</settings.defaultNumberOfItems>
					<settings.showSearch>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.number_of_items</label>
							<config>
								<type>input</type>
								<default>10, 20, 50, 100, -1</default>
							</config>
						</TCEforms>
					</settings.showSearch>
				</el>
			</ROOT>
		</general>

		<facet>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.facets</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.isVisualSearchBar>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.is_visual_search_bar
							</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.isVisualSearchBar>
					<settings.facets>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.facets</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getFacets</itemsProcFunc>
								<size>10</size>
								<maxitems>100</maxitems>
							</config>
						</TCEforms>
					</settings.facets>
				</el>
			</ROOT>
		</facet>
		<filter>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.filter
					</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.selection>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.selection</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getSelections</itemsProcFunc>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.selection>
					<settings.additionalEquals>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.additionalEquals</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</settings.additionalEquals>
				</el>
			</ROOT>
		</filter>
		<sorting>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.sorting
					</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.sorting>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.sorting</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getSorting</itemsProcFunc>
								<size>1</size>
								<maxitems>1</maxitems>
