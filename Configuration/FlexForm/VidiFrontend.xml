						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.direction</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">ASC</numIndex>
										<numIndex index="1">ASC</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">DESC</numIndex>
										<numIndex index="1">DESC</numIndex>
									</numIndex>
								</items>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.direction>
				</el>
			</ROOT>
		</sorting>
		<detailView>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.detail_view
